<script>
    let answers = [
    "C",
    "A",
    "R",
    "D",
    "I",
    "B",
    "U",
    "Z",
    "F",
    "I",
    "N",
    "E",
    "N",
    "A",
    "R",
    "E",
    "N",
    "A",
    "T",
    "R",
    "E",
    "M",
    "O",
    "R",
    "P",
    "A",
    "A",
    "K",
    "N",
    "E",
    "I",
    "N,
    "K",
    "I",
    "E",
    "R"
  ]
    let isItWrongCheck = () => {
        let sentinel = true
        let responses = Array.from(document.querySelectorAll("input"))
        for (let i = 0; i < answers.length; i++) {
            if (answers[i].toLowerCase() != responses[i].value.toLowerCase()) {
                window.alert("Something's wrong!")
                sentinel = false
                break
            }
        }
        if (sentinel) {
            window.alert("sick bro u solved it!")
        }
    }
    let whichAreWrongCheck = () => {
        let responses = Array.from(document.querySelectorAll("input"))
        let sentinel = true
        for (let i = 0; i < answers.length; i++) {
            if (answers[i].toLowerCase() != responses[i].value.toLowerCase()) {
                responses[i].style.backgroundColor = "red"
                sentinel = false
            }
            else {
                responses[i].style.backgroundColor = "white"
            }
        }
        if (sentinel) {
            window.alert("sick bro, you did it")
        }
        else {
            window.alert("tried so hard, got so far. in the end it didn't really matter. click on the 'Clear checker results' to remove the red backgrounds")
        }
    }
    let clearCheck = () => {
        let responses = Array.from(document.querySelectorAll("input"))
        for (let i = 0; i < answers.length; i++) {
            responses[i].style.backgroundColor = "white"
        }
    }
</script>

